<section>
  <h2>Ausgestattete Gegenst√§nde</h2>
  <div class="col-4 equipped-armor">
      <span class="total-armor">{{#if config.enableDamageReduction}}{{data.system.armorTotal}}{{^}}&nbsp;{{/if}}</span>
      {{#each data.system.armor as |armor id|}}
          <span>{{armor.name}}</span>
      {{/each}}
      {{#unless data.system.armor}}<span>{{localize "tinyd6.armor.none"}}</span>{{/unless}}
  </div>
  <div class="row">
    {{#each data.system.gear as |gearItem id|}}
      {{#if (eq gearItem.type "armor")}}
        <{{#if tagName}}{{tagName}}{{^}}li{{/if}} class="{{classes}} actor-item" data-item-id="{{gearItem._id}}">
          <div class="d-flex justify-content-between">
              <img src="{{gearItem.img}}" title="{{gearItem.name}}" width="24" height="24" class="align-middle mr-2"/>
              <h4 class="mr-auto">
                  <a class="item-show d-inline-block h-100">{{gearItem.name}}</a>
              </h4>
                  <a class="item-control item-equip ml-2 {{#if gearItem.system.equipped}}equipped{{/if}}" data-field="data.equipped" title="{{localize "tinyd6.actor.actions.equipTrait"}}">
                      <span class="fas fa-tshirt"></span>
                  </a>
              <a class="item-control item-delete ml-2" title="{{localize "tinyd6.actor.actions.deleteTrait"}}"><i class="fas fa-times"></i></a>
          </div>
        </{{#if tagName}}{{tagName}}{{^}}li{{/if}}>
      {{/if}}
    {{/each}}
  </div>
</section>