    <div class="row">
        <div class="col">
            <img src="systems/tinyd6/assets/images/tiny-d-logo.png" alt="tiny dungeon logo">
            {{> "systems/tinyd6/templates/tiny-dungeon/components/character.hbs"}}
            {{> "systems/tinyd6/templates/tiny-dungeon/components/traits.hbs"}}

        </div>
        <div class="col">
            {{#if owner}}
                <div class="mb-3">
                    {{> "systems/tinyd6/templates/tiny-dungeon/partials/roll-bar.hbs" flexClass=""}}
